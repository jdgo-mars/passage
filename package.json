{
	"name": "resolution",
	"productName": "Resolution",
	"version": "0.1.0",
	"description": "Life is a passage and so is time",
	"main": ".webpack/main",
	"scripts": {
		"build": "webpack --mode production",
		"dev": "webpack-dev-server --mode development --devtool inline-source-map --hot",
		"start": "tsc && electron dist/main.js",
		"server": "electron .",
		"dist": "electron-builder",
		"test": "ava"
	},
	"build": {
		"appId": "com.electron.${name}",
		"files": [
			"**/*",
			"build"
		],
		"dmg": {
			"title": "${productName}",
			"icon": "icon.png"
		}
	},
	"keywords": [],
	"author": {
		"name": "jdmartins",
		"email": "joaodiogomartins@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/electron-json-storage": "^4.0.0",
		"@types/jest": "^24.0.25",
		"@types/pouchdb-adapter-leveldb": "^6.1.3",
		"ava": "^2.4.0",
		"electron": "7.1.7",
		"electron-builder": "^21.2.0",
		"eslint": "^6.8.0",
		"jest-electron": "^0.1.11",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.4",
		"typescript": "^3.7.4",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10",
		"webpack-dev-server": "^3.10.1"
	},
	"ava": {
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"dependencies": {
		"electron-json-storage": "^4.1.8"
	}
}
